\ No newline at end of file
+use_proxy=1
+
+while [ -n "$no_proxy" ]; do
+	no_proxy_entry=${no_proxy%%,*}
+	if [ "$1" != "${1%$no_proxy_entry}" ]; then
+		#echo "no_proxy match:  $1 is in $no_proxy_entry"
+		use_proxy=0
+		break;
+	fi
+	if [ "$no_proxy_entry" = "$no_proxy" ]; then
+		break
+	fi
+	no_proxy=${no_proxy#*,}
+done
+
+if [ $use_proxy = 0 ]; then
+	(cat | socket $1 $2)
+else
+	(echo "CONNECT $1:$2 HTTP/1.0"; echo; cat ) | socket \
+	$GIT_PROXY_HOST $GIT_PROXY_PORT | (read a; read a; cat)
+fi
